.footer
	padding: 80px 0
	width 100%
	min-width $min-width
	order 3
	background: #007C88
	margin-top -1px
	&__title
		text-align left
		font-weight: 700;
		font-size: 18px;
		line-height: 24px;
		color: #FFFFFF;
		margin-bottom 20px
	&__right-bottom, &__left-bottom
		p
			font-weight: 500;
			font-size: 12px;
			line-height: 25px;
			color: #FFFFFF;
			max-width: 600px
			&:not(:last-child)
				margin-bottom 15px
	&__logo
		max-width: 135px
	&__copyright
		font-family: 'Inter';
		font-style: normal;
		font-weight: 500;
		font-size: 14px;
		line-height: 17px;
		color: #ffffff80;
		mix-blend-mode: normal;
	&__anchors
		display flex
		justify-content: space-between
		align-items: center
		&-anchor
			color: #ffffff80;
			font-weight: 500;
			font-size: 14px;
			line-height: 17px;
			transition: .3s
			&:hover
				color: #fff
			&:not(:last-child)
				margin-right 45px
	&__right-first, &__right-second, &__left
		font-family: 'Inter';
		font-style: normal;
		font-weight: 500;
		font-size: 12px;
		line-height: 25px;
		color: #FFFFFF;
		max-width: 600px
	&__right-first
		margin-bottom 20px
	&__wrapper
		display flex
		justify-content: space-between
		align-items: center
		&-1
			margin-bottom 48px
		&-2
			margin-bottom 60px
		&-3
			margin-bottom 40px
	&__links
		display flex
		justify-content: space-between
		&-link
			position: relative
			font-weight: 500;
			font-size: 14px;
			line-height: 17px;
			color: #FFFFFF;
			padding-left: 34px
			transition: .3s
			&:hover
				color: $white-hover
			&:not(:last-child)
				margin-right: 80px
			&:before
				content ""
				position absolute
				width: 24px
				height: 24px
				display block
				left: 0
				top: -4px
		.tel
			&:before
				background: url(../img/main/phone.svg)
		.mail
			&:before
				background: url(../img/main/mail.svg)
		.unscribe
			&:before
				background: url(../img/main/unscribe.svg)
		.question
			&:before
				background: url(../img/main/question.svg)
			