.loan
    background: #007C87
    background: radial-gradient(36.56% 82.04% at 50% 100%, #21FFF6 0%, #007C87 92%);
    padding: 95px 0 278px 0
    &__container
        max-width: 757px
        display flex
        justify-content: space-between
        margin: auto
        position relative
        &:before
            content: ""
            display block
            position absolute
            width: 30.26%
            top: 25%
            left: 16%
            height: 1px
            background: url(../img/main/step-1-line-1.svg)
        &:after
            content: ""
            display block
            position absolute
            width: 30.26%
            top: 25%
            right: 17%
            height: 1px
            background: url(../img/main/step-1-line-2.svg)
    &__item
        display flex
        flex-direction: column
        align-items: center
        &-pic
            max-width: 50px
            margin-bottom 10px
        &-desc
            font-weight: 700;
            font-size: 15px;
            line-height: 18px;
            text-align: center;
            color: #FFFFFF;
            &-fade
                opacity .5

.form
    background: #007C87
    margin-top -240px
    &__wrapper
        max-width: 800px
        margin: auto
    &__header
        width: 100%
        padding: 30px 0
        background: radial-gradient(65.9% 281.68% at 50% 170.23%, #00FFF5 0%, #007C87 100%);
        border-radius: 45px 45px 0px 0px;
        &-title
            font-weight: 700;
            font-size: 26px;
            line-height: 26px;
            text-align: center;
            letter-spacing: -1px;
            color: #FFFFFF;
            padding 8px 0
            width: 190px
            background: #FF723C;
            border-radius: 22px;
            margin: 0 auto 10px
        &-desc
            font-weight: 700;
            font-size: 14px;
            line-height: 18px;
            text-align: center;
            letter-spacing: -0.5px;
            color: #FFFFFF;
    &__body
        background: #FFFFFF;
        border-radius: 0px 0px 45px 45px;
        position relative
        z-index 2
        
.fields
    padding: 90px 60px 60px 60px
    margin-top -40px
    background: #fff
    border-radius: 0 0 45px 45px
    &__label
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        color: rgba(25, 33, 34, .5);
        mix-blend-mode: normal;
    input
        margin-top 10px 
        background: #FFFFFF;
        border: 1px solid #D1D6D8;
        border-radius: 25px;
        width: 100%
        height: 50px
        padding: 0 20px
    &__field
        margin-bottom 20px
    &__email
        margin-bottom 10px
    &__phone
        margin-bottom 10px
    &__container
        display flex
        justify-content: space-between
        align-items: center
        margin-top 40px
    &__checkbox
        cursor pointer
        display: flex
        align-items: center
        font-weight: 500;
        font-size: 14px;
        line-height: 20px;
        color: #192122;
        flex-wrap: wrap
        a
            color: #00AAB5;
            transition: .3s
            &:hover
                color: hsl(184, 100%, 25%);
        input
            display none
            &:checked + .fields__checkbox-fake:before
                opacity 1
        &-fake
            transition: .3s
            margin-right 15px
            width: 32px
            height: 32px
            border: 1px solid #D1D6D8;
            border-radius: 5px
            position relative
            transition: $dafault-transition
            &:before
                transition: .3s
                content ""
                display: block
                position absolute
                width: 32px
                height: 32px
                top: -1px
                left: -1px
                border-radius: 5px
                background: url(../img/main/checkbox.svg)
                opacity 0
            &:hover
                box-shadow: 0 0 3px #192122
    &__button
        font-weight: 700;
        font-size: 18px;
        line-height: 18px;
        text-align: center;
        color: #FFFFFF;
        width: 140px
        padding: 25px 0
        background: #00AAB5;
        border-radius: 35px;
        transition: .3s
        &:hover
            color: #fff
            background: hsl(184, 100%, 30%);





.form-calc
    background: #F2F2F2
    border-radius: 45px
    &__top
        background: #fff
        padding: 30px 60px 60px 60px
        border-radius: 45px
    &__bottom
        padding: 30px 60px
        display flex
        justify-content: space-between
        &-items
            display flex
            justify-content: space-between
            width: 344px
            margin: 0 auto 0 0
        &-item
            display flex
            flex-direction: column
            align-items: center
            &-title
                font-weight: 500;
                font-size: 11px;
                line-height: 11px;
                text-align: center;
                color: rgba(25, 33, 34, .5);
                mix-blend-mode: normal;
                margin-bottom 10px
            &-desc
                font-weight: 700;
                font-size: 12px;
                line-height: 12px;
                text-align: center;
                color: rgba(25, 33, 34, .5);
                mix-blend-mode: normal;
    &__wrapper
        display flex
        justify-content: space-between
        align-items: center
    &__wrapper-bottom
        margin-top 20px
        display flex
        justify-content: space-between
        align-items: center
    &__slider
        margin-top 21px
        margin-bottom 37px
        border-radius: 33px
        height: 14px
    &__title
        font-family: 'Inter';
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        color: rgba(25, 33, 34, .5);
        mix-blend-mode: normal;
    &__amount
        text-align center
        width: 153px
        font-weight: 600;
        font-size: 15px;
        line-height: 15px;
        letter-spacing: -1px;
        color: #182021;
        padding: 18px 0
        background: #FFFFFF;
        border: 1px solid #D1D6D8;
        border-radius: 25px;
    &__dropdown
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        color: #192122;
        padding-left 23px
        padding-right 25px
        position relative
        cursor pointer
        transition: $default-transition
        &:hover
            color: rgba(25, 33, 34, .5);
        &:before
            content ""
            display block
            width: 18px
            height: 18px
            left: 0
            top: -2px
            position absolute
            background: url(../img/main/calendar.svg)
        &:after
            content ""
            display block
            width: 20px
            height: 20px
            right: 0
            top: -4px
            position absolute
            background: url(../img/main/accordion-arrow.svg)
        &-list
            background: #FFFFFF;
            box-shadow: 0px 45px 58px rgba(0, 0, 0, 0.423246);
            border-radius: 23px;
            width: 175px
            height: 256px
            overflow-y: scroll;
            position absolute;
            top: 30px
            left: -20px
            padding: 30px 40px
            display none
            &-item
                font-weight: 500;
                font-size: 17px;
                line-height: 20px;
                letter-spacing: -0.5px;
                color: #182021;
                transition: .3s
                &:hover
                    color: rgba(24, 32, 33, .5);
                &:not(:last-child)
                    margin-bottom 20px
            &-fade
                position absolute
                width: 100%
                height: 30px
                background: linear-gradient(to top, rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%);
                bottom: -272px
                left: 0
                display none
            
    &__item
        font-weight: 600;
        font-size: 15px;
        line-height: 15px;
        letter-spacing: -1px;
        color: #182021;
        background: #F2F2F2;
        border-radius: 25px;
        text-align center
        padding: 9px 0
        width: 95px
        cursor pointer
        transition: $default-transition
        &:not(:last-child)
            margin-right: 5px
        &-active
            background-color: #00AAB5;
            color: #fff
        &-container
            display flex
            justify-content: space-between
        &:hover
            box-shadow: 0 0 3px #192122
        &-active
            background-color: #00AAB5;
            color: #fff
            &:hover
                background-color: #00AAB5;
                color: #fff
                box-shadow: none
    &__return
        display flex
        justify-content: center
        margin: auto
        flex-direction: column
        align-items: center
        span
            display inline-block
        &-grey
            font-weight: 500;
            font-size: 11px;
            line-height: 11px;
            color: rgba(25, 33, 34, .5);
            mix-blend-mode: normal;
            margin-bottom 10px
        &-green
            font-weight: 700;
            font-size: 12px;
            line-height: 12px;
            color: #228833;
            margin-right 10px
        &-red
            font-weight: 600;
            font-size: 12px;
            line-height: 12px;
            text-align: center;
            text-decoration-line: line-through;
            color: rgba(255, 43, 0, .5);
            mix-blend-mode: normal;


