.cabinet-event
    &__title
        font-weight: 700;
        font-size: 24px;
        line-height: 28px;
        color: #192122;
        margin-bottom 40px
    &__item
        border: 1px solid #D1D6D8;
        border-radius: 35px
        width: 100%
        padding: 30px 50px
        cursor: pointer
        &-title
            font-size: 18px;
            line-height: 30px;
            color: #192122;
            font-weight 400
            margin-bottom 5px
        &-desc
            display flex
            gap: 20px
            justify-content: left
        &:not(:last-child)
            margin-bottom 15px
        &.active
            position relative
            &:before
                content: ""
                position absolute
                top: 21%;
                left: 3%
                width: 7px;
                height: 7px;
                border-radius: 50%;
                background-color: #007C87
                -webkit-transition: all 0.3s ease-in;
                transition: all 0.3s ease-in;
                display block