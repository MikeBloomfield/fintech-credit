.cabinet-reports
    &__arrow
        transition: .2s
    &__title
        font-weight: 700;
        font-size: 24px;
        line-height: 28px;
        color: #192122; 
        margin-bottom 40px
    &__item
        border-radius: 35px
        border: 1px solid #D1D6D8
        &:not(:last-child)
            margin-bottom 50px
        span
            opacity .5
    &__padding
        padding: 40px 20px 30px 40px;
    &__wrapper
        display flex
        justify-content: space-between
        align-items: center
        flex-wrap: wrap
        &:not(:last-child)
            margin-bottom 15px
        h3
            font-size: 20px;
            line-height: 24px;
            font-weight: 400;
            color: #192122; 
            margin-bottom 0
        h4
            font-weight 700
            font-size 24px
            line-height 30px
            width: 40%
            color: #192122; 
            margin-bottom 0
    &__sub
        color: #192122; 
        font-size 15px
        line-height 16px
        &:hover
            color: #192122
            opacity .5
    &__option
        background: #00AAB5;
        border-radius: 35px;
        font-weight: 700;
        font-size: 18px;
        line-height: 18px;
        text-align: center;
        color: #FFFFFF;
        display block
        width: 320px
        padding: 20px 0
        &:hover
            color: #fff
            background: hsl(184, 100%, 25%);
    &__bottom
        border-top: 1px solid #D1D6D8
        &-wrapper
            display flex
            justify-content: space-between
            cursor pointer
            padding 15px 20px 25px 40px
        h3
            font-size: 20px;
            line-height: 24px;
            font-weight: 400;
            color: #192122; 
            margin-bottom 0
    &__items
        display none
        padding: 0 20px 15px 40px;
        &-item
            display flex
            justify-content: space-between
            min-height: 96px
            align-items: center
            flex-wrap: wrap
            &:not(:last-child)
                border-bottom: 1px solid #D1D6D8
            .logo
                max-width: 115px
            .title
                font-size 20px
                line-height 25px
                margin-bottom 0
                color: #192122
                margin-top 0
            .desc
                font-size 14px
                line-height 20px
                margin-bottom 0
                color: #192122
                max-width: 318px
            .date
                font-size 14px
                line-height 22px
                color: #192122
                opacity .5

.cabinet-reports__item.active
    .cabinet-reports__items
        display block
    .cabinet-reports__bottom-wrapper
        border-bottom: 1px solid #D1D6D8
    .cabinet-reports__arrow
        transform: rotate(180deg)


    
        
