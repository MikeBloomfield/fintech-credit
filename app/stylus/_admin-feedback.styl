.cabinet-feedback
    .cabinet-feedback__title
        font-weight: 700;
        font-size: 24px;
        line-height: 28px;
        color: #192122;
        margin-bottom 40px
    &__form
        margin-top 40px
        border-radius: 45px
        background: #fff
        margin: auto
        &-item:not(:last-child)
            margin-bottom 20px
        &-item
            width: 100%
        &-container
            display flex
            gap: 20px
        &-button
            color: #fff
            background: #00AAB5;
            border-radius: 35px;
            display block
            max-width: 100%
            text-align center
            padding: 25px 0
            font-weight: 700;
            font-size: 18px;
            line-height: 18px;
            transition: .2s
            max-width: 400px
            margin: 30px auto 0
            &:hover
                background: hsl(184, 100%, 25%);
                color: #fff 
        label
            font-weight: 500;
            font-size: 14px;
            line-height: 14px;
            color: rgba(25, 33, 34, .5);
        input, textarea
            background: #FFFFFF;
            border: 1px solid #D1D6D8;
            border-radius: 25px;
            padding: 18px 25px
            color: #182021
            font-weight: 600;
            font-size: 15px;
            line-height: 15px;
            width: 100%
            margin-top 10px
            resize: none
            &::placeholder
                opacity .5
            &:focus
                outline: none
                border: 1px solid #D1D6D8;

