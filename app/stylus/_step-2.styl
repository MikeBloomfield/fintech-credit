.step-2
    display none

    .passport
        background: #007C87
        margin-top -240px
        &__wrapper
            max-width: 800px
            margin: auto
            background: #FFFFFF;
            border-radius: 45px;
            padding: 50px 60px 60px 60px
        &__title
            font-weight: 700;
            font-size: 34px;
            line-height: 34px;
            text-align: center;
            color: #192122;
            margin-bottom 50px
        &__container
            display flex
            justify-content: space-between
        &__item
            width: 320px
            margin-bottom 20px
        &__item-wide
            margin-bottom 20px
        &__radio
            &-fake
                background: #FFFFFF;
                border: 1px solid #D1D6D8;
                border-radius: 16px;
                width: 32px
                height: 32px
                position relative;
                margin-right: 10px
                &:before
                    transition: .3s
                    content ""
                    width: 32px
                    height 32px
                    top: -1px
                    left: -1px
                    position: absolute
                    border: 9px solid #00AAB5;
                    border-radius: 16px
                    opacity 0

            &-title
                font-weight: 500;
                font-size: 14px;
                line-height: 14px;
                color: rgba(25, 33, 34, .5);
                mix-blend-mode: normal;
                margin-bottom 15px
            &-label
                display flex
                align-items: center
                font-weight: 600;
                font-size: 15px;
                line-height: 15px;
                color: #182021;
                cursor pointer
            &-container
                display flex
                justify-content: space-between
                width: 240px
                margin-bottom 40px
            &-item
                max-width: 112px
                input
                    display none
                    width: 32px
                    height: 32px
                    background: #FFFFFF;
                    border: 1px solid #D1D6D8;
                    border-radius: 16px;
                    margin 0
                    &:checked + .passport__radio-fake:before
                        opacity 1
        &__subtitle
            font-weight: 700;
            font-size: 26px;
            line-height: 26px;
            color: #192122;
            text-align left
            margin-bottom 30px
        &__container-bottom
            display flex
            justify-content: space-between
            align-items: center
            &-back
                padding-left 30px
                position relative
                font-weight: 600;
                font-size: 15px;
                line-height: 15px;
                color: #182021;
                &:hover
                    color: rgba(24, 32, 33, .5);
                &:before
                    content ""
                    position absolute
                    width: 20px
                    height: 20px
                    display block
                    left: 0
                    top: -2px
                    background: url(../img/main/back.svg)

.textarea
    div
        margin-bottom 10px
    &-input
        font-weight: 600;
        font-size: 15px;
        line-height: 15px;
        color: rgba(24, 32, 33, .5);
        mix-blend-mode: normal;
        height: 140px
        width: 100%
        resize: none
        background: #FFFFFF;
        border: 1px solid #D1D6D8;
        border-radius: 25px;
        padding: 17px 25px
        &:placeholder
            font-family: 'Inter';
            font-style: normal;
            font-weight: 600;
            font-size: 15px;
            line-height: 15px;
            color: rgba(24, 32, 33, .5);
            mix-blend-mode: normal;
        &:focus
            border: 1px solid #00AAB5;
            



.select__wrapper
    position relative
    &:before
        content ""
        display: block
        position absolute
        right: 20px
        top: 15px
        width: 24px
        height: 24px
        background: url(../img/main/accordion-arrow.svg)
        z-index 2

.ui.selection.dropdown
    appearance: none
    width: 100%
    height: 50px
    border-radius: 25px
    margin-bottom 20px
    padding: 15px 25px 10px 20px;



input
    margin-top 10px 
    background: #FFFFFF;
    border: 1px solid #D1D6D8;
    border-radius: 25px;
    width: 100%
    height: 50px
    padding: 0 20px
    color: #182021
    &:focus
        border: 1px solid #00AAB5;
