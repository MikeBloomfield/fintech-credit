.cabinet-mailing
    &__title
        font-weight: 700;
        font-size: 24px;
        line-height: 28px;
        color: #192122;
        margin-bottom 40px
    &__item
        border: 1px solid #D1D6D8;
        border-radius: 35px
        width: 100%
        padding: 30px 50px
        transition: .2s
        &-title
            font-size 18px
            line-height 30px
            margin-bottom 10px
            font-weight 400
            color: #192122;
        &-desc
            font-size 14px
            line-height 20px
            color: #192122;
        &:hover
            box-shadow: 0 12px 36px 16px #D1D6D8;
        &:not(:last-child)
            margin-bottom 30px
        &-checkbox
            input
                display none
            label
                width: 100%
                height: 100%
            &-fake
                cursor pointer
                width: 32px;
                height: 32px;
                min-width: 32px;
                border: 2px solid #d1d6d8;
                border-radius: 10px;
                display: inline-block;
                position: relative;
                background-repeat: no-repeat;
                background-position: center center;
                -webkit-transition: all 0.2s ease-in;
                transition: all 0.2s ease-in;
            input:checked + label .cabinet-mailing__item-checkbox-fake
                background-color: #00AAB5
                border: 2px solid #00AAB5
                background-image: url(../img/main/done.svg)
                background-position: center center
            
    &__wrapper
        display flex
        justify-content: space-between
