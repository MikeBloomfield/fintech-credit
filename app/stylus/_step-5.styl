.step-5
    padding-top 125px
    background: #007C87
    position relative
    z-index: 1
    display none
    .wrapper
        position relative
        z-index 10
    &:before
        content: ""
        position absolute
        top: 0
        width: 100%
        height: 451px
        background: radial-gradient(36.56% 82.04% at 50% 100%, #21FFF6 0%, #007C87 100%);
        display block
        z-index 1
    &:after
        content: ""
        position absolute
        top: 201px
        width: 100%
        height: 250px
        background: linear-gradient(180deg, rgba(0, 123, 135, 0.0001) 0%, #007C88 56.94%);
        display block
        z-index 1
    label
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        color: rgba(25, 33, 34, .5);
        text-align center
        display block
    input
        background: #FFFFFF;
        border: 1px solid #D1D6D8;
        border-radius: 25px;
        padding: 18px 25px
        color: #182021
        font-weight: 600;
        font-size: 15px;
        line-height: 15px;
        width: 100%
        margin-top 10px
        text-align center
        margin-bottom 28px
        &::placeholder
            opacity .5
    &__title
        font-weight: 700;
        font-size: 34px;
        line-height: 34px;
        text-align: center;
        color: #FFFFFF;
        background: #FF723C;
        border-radius: 25px;
        max-width: 555px
        margin: 0 auto 10px
        padding: 6px 0 10px
    &__desc
        font-weight: 500;
        font-size: 16px;
        line-height: 22px;
        text-align: center;
        color: #FFFFFF;
        max-width: 670px
        margin: 0 auto 40px
    &__again
        font-weight: 500;
        font-size: 14px;
        line-height: 14px;
        text-align: center;
        color: #192122;
        padding-left 24px
        position relative
        max-width: 197px
        margin: 0 auto 31px
        &-link
            color: rgba(25, 33, 34, 0.5);
            transition: .2s
            &:hover
                color: rgba(25, 33, 34, 0.5);
                opacity .5
        &:before
            content:""
            position absolute
            display block
            width: 18px
            height: 18px
            left: 2px
            top: -2px
            background: url(../img/main/calendar.svg)
    &__form
        padding: 40px
        border-radius: 45px
        background: #fff
        max-width: 480px
        margin: auto
        &-button
            color: #fff
            background: #00AAB5;
            border-radius: 35px;
            display block
            max-width: 100%
            text-align center
            padding: 25px 0
            font-weight: 700;
            font-size: 18px;
            line-height: 18px;
            transition: .2s
            &:hover
                background: hsl(184, 100%, 25%);
                color: #fff 
